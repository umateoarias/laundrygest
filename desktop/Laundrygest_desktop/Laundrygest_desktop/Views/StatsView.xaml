<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Laundrygest_desktop.Views"
             xmlns:Laundrygest_desktop="clr-namespace:Laundrygest_desktop" x:Class="Laundrygest_desktop.Views.StatsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <Laundrygest_desktop:StatsViewModel/>
    </UserControl.DataContext>
    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" x:Name="btnStatsGeneral" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Estadistica general"/>
        <Button Grid.Column="2" Grid.Row="1" x:Name="btnMonthlySummary" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Resum mensual"/>
        <Button Grid.Column="3" Grid.Row="1" x:Name="btnDailyCollections" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Recollides dies"/>
        <Button Grid.Column="1" Grid.Row="2" x:Name="btnBestCustomers" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Millors clients"/>
        <Button Grid.Column="2" Grid.Row="2" x:Name="btnInvoices" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Facturar client"/>
        <Button Grid.Column="3" Grid.Row="2" x:Name="btnInvoiceList" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Llistat factures"/>
        <Button Grid.Column="4" Grid.Row="3" x:Name="btnModClients" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Modifica clients"/>
    </Grid>
</UserControl>
