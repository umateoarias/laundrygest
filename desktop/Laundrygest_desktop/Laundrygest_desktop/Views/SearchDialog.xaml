<Window
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Laundrygest_desktop.Views"
      xmlns:ViewModel="clr-namespace:Laundrygest_desktop.ViewModel" x:Class="Laundrygest_desktop.Views.SearchClientDialog"
      mc:Ignorable="d" 
      d:DesignHeight="770" d:DesignWidth="1500"
      Title="SearchClientDialog">

    <Window.DataContext>
        <ViewModel:SearchDialogViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="1" Width="900" Height="120" VerticalContentAlignment="Center" FontSize="28" Text="" />
            <Button Grid.Column="2" Style="{StaticResource WindowButtons}" Height="120" Width="180" Content="Buscar"/>
            <Button Grid.Column="3" Style="{StaticResource WindowButtons}" Command="{Binding CreateClientCommand}" Height="120" Width="180" Content="Crear"/>
        </Grid>
        <DataGrid Grid.Row="1" Margin="25"/>

    </Grid>
</Window>
