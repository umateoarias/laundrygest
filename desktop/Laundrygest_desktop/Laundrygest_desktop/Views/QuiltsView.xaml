<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Laundrygest_desktop.Views"
             xmlns:Laundrygest_desktop="clr-namespace:Laundrygest_desktop" 
             x:Class="Laundrygest_desktop.Views.QuiltsView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.DataContext>
        <Laundrygest_desktop:QuiltsViewModel/>
    </UserControl.DataContext>

    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" x:Name="btnQuiltIn" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Recollides"/>
        <Button Grid.Column="2" Grid.Row="1" x:Name="btnQuiltOut" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Lliuraments"/>
        <Button Grid.Column="3" Grid.Row="1" x:Name="btnQuiltMod" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Modificar"/>
        <Button Grid.Column="1" Grid.Row="2" x:Name="btnQuiltPrint" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Imprimir"/>
        <Button Grid.Column="2" Grid.Row="2" x:Name="btnQuiltPriceList" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Edredons"/>
        <Button Grid.Column="3" Grid.Row="2" x:Name="btnQuiltObs" Style="{StaticResource WindowButtons}" Height="90" Width="160" Content="Observacions"/>
    </Grid>

</UserControl>
