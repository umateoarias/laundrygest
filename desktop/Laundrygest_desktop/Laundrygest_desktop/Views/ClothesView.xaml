<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Laundrygest_desktop.Views"
             xmlns:Laundrygest_desktop="clr-namespace:Laundrygest_desktop" x:Class="Laundrygest_desktop.Views.ClothesView"
             mc:Ignorable="d"
             d:DesignHeight="900" d:DesignWidth="1600">
    <UserControl.DataContext>
        <Laundrygest_desktop:ClothesViewModel/>
    </UserControl.DataContext>
    <Grid Background="#FFFFFF">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" x:Name="btnCollectionIn" Style="{StaticResource WindowButtons}" Height="120" Width="240" Content="Recollides" Command="{Binding CreateCollectionCommand}"/>
        <Button Grid.Column="2" Grid.Row="1" x:Name="btnCollectionOut" Style="{StaticResource WindowButtons}" Height="120" Width="240" Content="Lliuraments"/>
        <Button Grid.Column="3" Grid.Row="1" x:Name="btnCollectionMod" Style="{StaticResource WindowButtons}" Height="120" Width="240" Content="Modificar"/>
        <Button Grid.Column="1" Grid.Row="2" x:Name="btnCollectionPrint" Style="{StaticResource WindowButtons}" Height="120" Width="240" Content="Imprimir"/>
        <Button Grid.Column="2" Grid.Row="2" x:Name="btnCollectionPriceList" Style="{StaticResource WindowButtons}" Height="120" Width="240" Content="Prendes"/>
        <Button Grid.Column="3" Grid.Row="2" x:Name="btnCollectionObs" Style="{StaticResource WindowButtons}" Height="120" Width="240" Content="Observacions"/>
    </Grid>
</UserControl>
