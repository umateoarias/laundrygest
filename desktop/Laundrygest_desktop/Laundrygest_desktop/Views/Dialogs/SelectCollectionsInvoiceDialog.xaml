<Window x:Class="Laundrygest_desktop.Views.Dialogs.SelectCollectionsInvoiceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laundrygest_desktop.Views.Dialogs"
        mc:Ignorable="d"
        Title="SelectCollectionsInvoiceDialog" Height="770" Width="1500" WindowState="Maximized" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <DataGrid Margin="20"  Grid.Row="0" ItemsSource="{Binding Collections}" SelectionMode="Single" AutoGenerateColumns="False"
                  MinRowHeight="50" ColumnHeaderStyle="{StaticResource ColumnHeaderStyle}" CellStyle="{StaticResource CellStyle}" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="" Binding="{Binding IsSelected}"/>
                <DataGridTextColumn Header="Nº Recollida" Binding="{Binding Model.Number}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Data lliurament" Binding="{Binding Model.DueDate}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Pendent" Binding="{Binding Model.DueTotal}" IsReadOnly="True"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Model.Total}" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Style="{StaticResource WindowButtons}" Command="{Binding ConfirmCommand}"  Content="Acceptar" Background="LimeGreen" Height="60" Width="180" HorizontalAlignment="Right" Margin="30"/>
            <Button Grid.Column="0" Style="{StaticResource WindowButtons}" Command="{Binding CancelCommand}" Content="Cancel·lar" Background="DarkRed" Height="60" Width="180" HorizontalAlignment="Right"/>
        </Grid>
    </Grid>
</Window>
