<Window x:Class="Laundrygest_desktop.Views.Dialogs.StatsTableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laundrygest_desktop.Views.Dialogs" Background="LightGray"
        mc:Ignorable="d"
        Title="Estadistiques" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Items}" 
                  AutoGenerateColumns="False" x:Name="DataGridStats" IsReadOnly="True" ColumnWidth="*" RowHeight="40" GridLinesVisibility="Horizontal" FontSize="14"
                  Margin="10"/>

    </Grid>
</Window>
