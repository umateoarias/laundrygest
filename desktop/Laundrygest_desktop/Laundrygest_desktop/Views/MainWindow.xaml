<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laundrygest_desktop"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:local1="clr-namespace:Laundrygest_desktop.Views" x:Class="Laundrygest_desktop.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#008968">
            <StackPanel>
                <RadioButton x:Name="btnInicio" GroupName="Menu" 
                           Style="{StaticResource MenuButtonStyle}"
                           Content="Roba"
                             Command="{Binding NavigateCommand}"
                             CommandParameter="0"
                           IsChecked="True" 
/>
                <RadioButton x:Name="btnClientes" GroupName="Menu" 
                           Style="{StaticResource MenuButtonStyle}"
                           Command="{Binding NavigateCommand}"
                             CommandParameter="1"
                           Content="Edredons"/>

                <RadioButton x:Name="btnFacturas" GroupName="Menu" 
                           Style="{StaticResource MenuButtonStyle}"
                           Command="{Binding NavigateCommand}"
                             CommandParameter="2"
                           Content="Estadistiques"/>

                <RadioButton x:Name="btnReportes" GroupName="Menu" 
                           Style="{StaticResource MenuButtonStyle}"
                             Command="{Binding NavigateCommand}"
                             CommandParameter="3"
                           Content="App"/>

                <RadioButton x:Name="btnConfig" GroupName="Menu" 
                           Style="{StaticResource MenuButtonStyle}"
                             Command="{Binding NavigateCommand}"
                             CommandParameter="4"
                           Content="Configuració"/>
            </StackPanel>
        </Border>

        <Border Grid.Column="1" Background="#ECF0F1">
            <ContentControl>
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type local:ClothesViewModel}">
                        <local1:ClothesView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type local:QuiltsViewModel}">
                        <local1:QuiltsView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type local:StatsViewModel}">
                        <local1:StatsView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type local:AppViewModel}">
                        <local1:AppView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type local:ConfigViewModel}">
                        <local1:ConfigView/>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Border>
    </Grid>
</Window>
